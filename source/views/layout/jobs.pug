extends ../partials/_layout

block content
  .container#jobs
    bot-ui

  script(src='https://cdn.jsdelivr.net/vue/latest/vue.min.js')
  script(src='./js/botui.min.js')
  script(src='./js/jobs.min.js')
block css
  link(rel='stylesheet', href='./css/botui/botui.css')
  link(rel='stylesheet', href='https://unpkg.com/botui/build/botui-theme-default.css')
  style(type='text/css').
    body .jsdc-background { background-color: #fff; }
    input[type="submit"]:hover, input[type="reset"]:hover, input[type="button"]:hover, button:hover, .button:hover, .typeform-button:hover { background-color:#28135b; }
    .botui-actions-buttons > button { margin-left: 10px;margin-bottom: 7px; display: block; }
    button { outline: none; }
    .botui-container { font-size: 16px; font-weight: bold;}

block js
  script.
    setTimeout(function(){
      document.querySelectorAll('#navbar ul li')[6].classList.add('active');
    }, 0);
