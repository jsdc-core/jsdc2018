extends ./partials/_layout

block content
  //- Header
  section#header
    .container
      .title.row
        .jsdc-full-name.col-md-6
          span 2018
          span JavaScript Developer
          span Conference
          br
          span 2018.11.17-18
          span 自由廣場會議中心國際演藝圈
          span 台北市內湖區瑞光路399號2號
        .logo.col-md-6
          img(src='./images/official/main_visual.png')
      .clearfix

  section#ticket
    .container
      .row
        .col-md-12
          header.text-center
            h2 售票資訊
      .ticket-container.row
        .ticket-info.col-md-6
          .ticket-1
            h3 JSDC 2018 學生票
            .ticket-price
              | TWD 3,950
            a.ticket-booking(href="https://kktix.com/events/jsdc2018/registrations/new", target="_blank")
              | BOOK NOW
        .ticket-info.col-md-6
          .ticket-1
            h3 JSDC 2018 早鳥票
            .ticket-price
              | TWD 3,950
            a.ticket-booking(href="https://kktix.com/events/jsdc2018/registrations/new", target="_blank")
              | BOOK NOW
      .ticket-container.row
        .ticket-info.col-md-6
          .ticket-1
            h3 JSDC 2018 一般票
            .ticket-price
              | TWD 3,950
            a.ticket-booking(href="https://kktix.com/events/jsdc2018/registrations/new", target="_blank")
              | BOOK NOW
        .ticket-info.col-md-6
          .ticket-1
            h3 JSDC 2018 團報票
            .ticket-price
              | TWD 3,950
            a.ticket-booking(href="https://kktix.com/events/jsdc2018/registrations/new", target="_blank")
              | BOOK NOW

  section#header(style="background-image: none")
    .container
      .count-down.row
        //- .content.col-md-12
          //- | countdown ticket
        .clearfix
        .time-content
          .date(style="background-image: none")
            .num(style="float: left")
            .num(style="float: left")
          span(style="position: relative;left: -30px;top: -20px;") D
          .hours(style="background-image: none")
            .num(style="float: left")
            .num(style="float: left")
          span(style="position: relative;left: -30px;top: -20px;") H
          .minutes(style="background-image: none")
            .num(style="float: left")
            .num(style="float: left")
          span(style="position: relative;left: -30px;top: -20px;") M
          .seconds(style="background-image: none")
            .num(style="float: left")
            .num(style="float: left")
          span(style="position: relative;left: -30px;top: -20px;") S
      br
      br

